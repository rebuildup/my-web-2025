{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"types": ["react", "react-dom", "node"],
		"typeRoots": ["./node_modules/@types"],
		"incremental": true,
		"assumeChangesOnlyAffectDirectDependencies": true,
		"baseUrl": ".",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"watchOptions": {
		"watchFile": "useFsEvents",
		"excludeDirectories": [
			"**/node_modules",
			"**/.git",
			"**/.next",
			"**/dist",
			"**/build"
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"src/types/global.d.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		".next",
		"dist",
		"build",
		"temp_archive",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"templates/**/*",
		"src/test-utils/**/*",
		"src/app/admin/**/*"
	]
}
