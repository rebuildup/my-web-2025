{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"recommended": false
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"useShorthandAssign": "off",
				"useNodejsImportProtocol": "error",
				"useTemplate": "error"
			}
		}
	},
	"overrides": [
		{
			"includes": ["scripts/**/*"],
			"linter": {
				"rules": {
					"recommended": true,
					"style": {
						"noNonNullAssertion": "error"
					}
				}
			}
		},
		{
			"includes": [
				"src/components/ui/PerformanceDashboard.tsx",
				"src/components/ui/MonitoringDashboard.tsx",
				"src/components/ui/MarkdownEditor.tsx",
				"src/components/ui/MarkdownEditor.demo.tsx",
				"src/components/ui/CoreWebVitalsMonitor.tsx",
				"src/components/ui/AccessibilityTester.tsx",
				"src/components/ui/DatePicker.tsx",
				"src/components/ui/LayoutStabilizer.tsx",
				"src/components/markdown/FallbackContent.tsx",
				"src/components/providers/PerformanceProvider.tsx",
				"src/components/admin/EnhancedDataManager.tsx",
				"src/components/admin/layout/PageHeader.tsx",
				"src/components/MagicBento.tsx",
				"src/components/playground/common/ResponsiveExperimentGrid.tsx"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noArrayIndexKey": "error"
					}
				}
			}
		}
	],
	"files": {
		"includes": [
			"src/**/*",
			"scripts/**/*",
			"*.{js,json,ts,tsx}",
			"public/**/*",
			"next.config.ts",
			"!!node_modules",
			"!!.next",
			"!!coverage",
			"!!biome-report.json",
			"!!biome-output.txt",
			"!!src/app/admin",
			"!!src/app/api",
			"!!src/test-utils",
			"!!src/app/tailwind.css",
			"!!src/app/app.css",
			"!!src/app/tools/ProtoType/prototype-src/styles/009_webglPopup.css",
			"!!src/app/tools/ProtoType/prototype-src/styles/styles/009_webglPopup.css",
			"!!src/app/tools/ProtoType"
		],
		"ignoreUnknown": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
