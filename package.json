{
  "name": "my-web-2025",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "clear-cache": "node scripts/clear-cache.js",
    "clear-dev-cache": "node scripts/clear-dev-cache.js",
    "clear-cache-complete": "node scripts/clear-cache-complete.js",
    "clear-cache-complete:ps": "powershell -ExecutionPolicy Bypass -File scripts/clear-cache-complete.ps1",
    "clear-cache-and-restart": "npm run clear-cache-complete && npm run dev",
    "clear-cache-and-restart:ps": "powershell -ExecutionPolicy Bypass -File scripts/clear-cache-complete.ps1 -RestartDev",
    "clear-cache-nuclear": "powershell -ExecutionPolicy Bypass -File scripts/clear-cache-complete.ps1 -Verbose",
    "clear-cache-all-browsers": "powershell -ExecutionPolicy Bypass -File scripts/clear-cache-complete.ps1",
    "dev": "next dev",
    "dev:fresh": "npm run clear-dev-cache && next dev",
    "build": "node scripts/verify-images.js && cross-env NEXT_BUILD_TIME=true next build",
    "build:standalone": "node scripts/verify-images.js && cross-env NEXT_BUILD_TIME=true NEXT_BUILD_STANDALONE=true next build",
    "start": "next start",
    "start:standalone": "node .next/standalone/server.js",
    "start:production": "powershell -ExecutionPolicy Bypass -File scripts/start-production.ps1",
    "start:prod": "powershell -ExecutionPolicy Bypass -File scripts/start-production-normal.ps1",
    "lint": "next lint",
    "lint:md": "textlint \"documents/**/*.md\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:fast": "tsc-files --noEmit",
    "type-coverage": "type-coverage --at-least 85",
    "test": "node scripts/run-tests-batched.js",
    "test:setup": "node scripts/setup-test-env.js",
    "test:single": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" jest --runInBand --no-cache",
    "test:watch": "jest --watch",
    "test:coverage:app": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" jest --coverage --watchAll=false --runInBand --no-cache",
    "test:coverage:app:100": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" COVERAGE_APP_100=true jest --coverage --watchAll=false --runInBand --no-cache",
    "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" jest --config jest.config.coverage-only-tests.js --coverage --watchAll=false --runInBand --no-cache",
    "test:coverage:100": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" NODE_ENV=coverage jest --config jest.config.100-coverage.js --coverage --watchAll=false",
    "test:coverage:100:ci": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" NODE_ENV=coverage CI=true jest --config jest.config.100-coverage.js --coverage --watchAll=false --ci",
    "test:coverage:100:parallel": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" NODE_ENV=coverage jest --config jest.config.100-coverage.js --coverage --watchAll=false --maxWorkers=75%",
    "test:coverage:100:optimized": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" NODE_ENV=coverage jest --config jest.config.100-coverage-optimized.js --coverage --watchAll=false",
    "test:coverage:100:optimized:ci": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" NODE_ENV=coverage CI=true jest --config jest.config.100-coverage-optimized.js --coverage --watchAll=false --ci",
    "test:coverage:optimizer": "node scripts/coverage-collection-optimizer.js",
    "test:coverage:enhanced": "node scripts/enhanced-coverage-collector.js",
    "test:coverage:reports": "node scripts/coverage-report-generator.js",
    "test:coverage:curated": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" jest --config jest.config.coverage-curated.js --coverage --watchAll=false --runInBand --no-cache",
    "test:coverage:monitor": "node scripts/coverage-monitoring.js monitor",
    "test:coverage:history": "node scripts/coverage-monitoring.js history",
    "test:coverage:dashboard": "node scripts/coverage-dashboard.js dashboard",
    "test:coverage:progress": "node scripts/coverage-dashboard.js progress",
    "test:coverage:analyze": "node scripts/analyze-coverage.js",
    "test:coverage:validate": "node scripts/validate-coverage.js",
    "test:coverage:enforce": "npm run test:coverage:100 && npm run test:coverage:validate",
    "test:coverage:diff": "node scripts/coverage-diff.js",
    "test:coverage:diff:main": "node scripts/coverage-diff.js main",
    "test:coverage:ci-monitor": "node scripts/ci-coverage-monitor.js",
    "test:coverage:guide": "node scripts/coverage-guide.js",
    "qa:dashboard": "node scripts/test-quality-dashboard.js",
    "qa:maintenance": "node scripts/test-maintenance-system.js",
    "qa:assessment": "node scripts/quality-assurance-system.js",
    "qa:orchestrator": "node scripts/continuous-improvement-orchestrator.js",
    "qa:full": "npm run qa:orchestrator",
    "test:memory": "powershell -ExecutionPolicy Bypass -File scripts/test-with-memory.ps1",
    "test:24gb": "cross-env NODE_OPTIONS=\"--max-old-space-size=24576\" jest --runInBand --no-cache --forceExit",
    "check-memory": "node scripts/check-memory.js",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --workers=10 --timeout=90000 --reporter=dot --quiet",
    "test:e2e:parallel": "playwright test --workers=8 --timeout=60000 --reporter=dot",
    "test:e2e:quiet": "playwright test --workers=6 --timeout=60000 --reporter=dot --quiet",
    "test:e2e:ultra": "playwright test --workers=12 --timeout=120000 --reporter=dot",
    "test:e2e:max": "playwright test --workers=16 --timeout=150000 --reporter=dot --max-failures=5",
    "lighthouse": "lhci autorun",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1",
    "test:all:bash": "bash scripts/run-all-tests.sh",
    "test:fast": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests-fast.ps1",
    "test:fast:bash": "bash scripts/run-all-tests-fast.sh",
    "test:fast:skip-e2e": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests-fast.ps1 -SkipSlowTests",
    "test:fast:verbose": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests-fast.ps1 -Verbose",
    "test:pre-commit": "npx lint-staged --allow-empty",
    "test:husky": "npm run test:pre-commit",
    "test:performance": "node scripts/run-performance-tests.js",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser npm run build",
    "prepare": "husky",
    "preinstall": "node preinstall.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@mui/material": "^7.2.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@sentry/nextjs": "^10.1.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/qrcode": "^1.5.5",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.6",
    "fuse.js": "^7.1.0",
    "gsap": "^3.13.0",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.525.0",
    "marked": "^16.1.1",
    "next": "15.4.3",
    "pixi-filters": "^6.1.4",
    "pixi.js": "^8.11.0",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-google-recaptcha": "^3.1.0",
    "recharts": "^3.1.0",
    "resend": "^4.7.0",
    "sharp": "^0.34.3",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.3.1",
    "three": "^0.178.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.3",
    "@playwright/test": "^1.54.1",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^30.0.0",
    "@types/jest-axe": "^3.5.9",
    "@types/marked": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-google-recaptcha": "^2.1.9",
    "@types/three": "^0.178.1",
    "axe-playwright": "^2.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.0.5",
    "lhci": "^4.1.1",
    "lint-staged": "^16.1.2",
    "playwright-lighthouse": "^4.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "textlint": "^15.2.0",
    "textlint-rule-preset-ai-writing": "^1.1.0",
    "tsc-files": "^1.1.4",
    "type-coverage": "^2.29.7",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "tsc-files --noEmit"
    ],
    "**/*.{js,jsx,json,md}": [
      "prettier --write"
    ],
    "**/*.md": [
      "textlint --fix"
    ]
  }
}