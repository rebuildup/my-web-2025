# 非推奨依存関係の警告を抑制
suppress-warnings=deprecated

# ピア依存関係の警告を緩和（package.jsonでより詳細に設定済み）
strict-peer-dependencies=false

# @chakra-ui/reactと@react-three/*をホイストして、@appletosolutions/reactbitsから見つけやすくする
public-hoist-pattern[]=@chakra-ui/*
public-hoist-pattern[]=@react-three/*
# shamefully-hoistを有効にして、Turbopackでのモジュール解決を改善
shamefully-hoist=true

